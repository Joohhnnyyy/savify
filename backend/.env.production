# Production Environment Configuration
# Copy this file to .env and update with your production values

# Application Configuration
APP_NAME=Savify Backend
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# Database Configuration (Use your production database URL)
DATABASE_URL=postgresql://username:password@your-db-host:5432/savify_production
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# Redis Configuration (Use your production Redis URL)
REDIS_URL=redis://your-redis-host:6379/0
CACHE_TTL=3600

# Authentication & Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-IN-PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Firebase Configuration (Use your production Firebase credentials)
FIREBASE_PROJECT_ID=your-production-firebase-project
# Add other Firebase config values from your service account key

# OpenAI Configuration (Use your production API key)
OPENAI_API_KEY=sk-your-production-openai-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# CORS Configuration (Update with your production frontend URL)
CORS_ORIGINS=["https://your-production-domain.vercel.app"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Monitoring & Logging (Add your production Sentry DSN)
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
LOG_FILE_PATH=/app/logs/app.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# Rate Limiting (More restrictive for production)
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60
RATE_LIMIT_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true

# API Documentation (Disable in production for security)
DOCS_URL=null
REDOC_URL=null
OPENAPI_URL=null
INCLUDE_DOCS=false